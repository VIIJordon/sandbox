= form_for @form_type do |f|
  - if @form_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@form_type.errors.count, "error")} prohibited this form_type from being saved:"
      %ul
        - @form_type.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :show
    = f.check_box :show
  .field
    = f.label :brief
    = f.text_area :brief
  .field
    = f.label :date
    = f.datetime_select :date
  .actions
    = f.submit 'Save'
