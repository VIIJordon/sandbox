= form_for @example do |f|
  - if @example.errors.any?
    #error_explanation
      %h2= "#{pluralize(@example.errors.count, "error")} prohibited this example from being saved:"
      %ul
        - @example.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :brief
    = f.text_area :brief
  .field
    = f.label :show
    = f.check_box :show
  .field
    = f.label :date
    = f.datetime_select :date
  .actions
    = f.submit 'Save'
